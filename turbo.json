{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputs": ["dist/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "types": {
      "dependsOn": ["build", "^types"],
      "outputs": [
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["build"]
    }
  }
}
